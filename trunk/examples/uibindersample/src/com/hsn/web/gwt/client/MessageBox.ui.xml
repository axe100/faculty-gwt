<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:com.hsn.web.gwt.client">
	
	<ui:style src="Uibindersample.css" />
	
	<g:VerticalPanel addStyleNames="{style.dialogVPanel}" horizontalAlignment="ALIGN_RIGHT">
		<g:HTML><b>Sending name to the server:</b></g:HTML>
		<g:Label ui:field="textToServerLabel"></g:Label>
		<g:HTML><br/><b>Server replies:</b></g:HTML>
		<my:ServerResponse ui:field="serverResponseLabel"></my:ServerResponse>
		<g:Button ui:field="closeButton">Close</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 